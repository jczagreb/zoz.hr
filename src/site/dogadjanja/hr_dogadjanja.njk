---
title: Događanja
description: Događanja
layout: default
lang: hr
pagination:
  data: dogadjanjahr
  size: 10
  alias: dogadjanja
permalink: "/hr/najave{% if pagination.pageNumber > 0 %}/stranica{{ pagination.pageNumber + 1}}{% endif %}/index.html"
eleventyComputed:
  p_title: "Najave događanja"
  p_description: "Događanja u Židovskoj općini Zagreb"
  p_id: "najava"
---
<!-- Start Nav Backed Header -->
<div class="nav-backed-header parallax" style="background-image:url(/images/banner.jpg);">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <ol class="breadcrumb">
          <li><a href="index.html">Početna</a></li>
          <li class="active">Najave događanja</li>
        </ol>
      </div>
    </div>
  </div>
</div>
<!-- End Nav Backed Header --> 
<!-- Start Page Header -->
<div class="page-header">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1 style="font-size:30px!important;">{{ p_description }}</h1>
      </div>
    </div>
  </div>
</div>
<!-- End Page Header --> 
<!-- Start Content -->
<div class="main" role="main">
    <div id="content" class="content full">
        <div class="container">
        <div class="row">
            <div class="col-md-9"> 
                <!-- Events Listing -->
                <section class="listing-cont" style="border-top:none">
                    <ul>
                    {% for item in pagination.items %}

                    {% if item.naziv != "prazno" %}

                        <li class="item event-item">
                        <div class="event-date"> <span class="date">{{item.datum | dateHr('dd') }}</span> <span class="month">{{item.datum | dateHr('LLL') }}</span> </div>
                        <div class="event-detail">
                            <h4><a href="/hr/najave/{{ item.slug }}" style="color:#000;">{{ item.naziv }}</a></h4>
                            <span class="event-dayntime meta-data" style="color:#0CC9E8;">{{item.datum | dateHr('cccc') }} 
                            
                            {%if (item.datum | dateHr('HH:mm')) != "00:00" %}
                              | {{item.datum | dateHr('HH:mm') }}h 
                            {% endif %}  
                            
                            | {{ item.lokacija }}</span> </div>
                        <div class="to-event-url">
                            <div><a href="/hr/najave/{{ item.slug }}" class="btn btn-default btn-sm">Detalji</a></div>
                        </div>
                        </li>

                    {% else %}

                    <h3>Na žalost trenutno nemamo događanja u najavi</h3>

                    {% endif %}

                    {% endfor %}
                    </ul>
                    </section>
              </div>

            {% include "partials/sidebar-page-hr.njk" %}

        </div>
    </div>
  </div>
</div>