---
layout: default
pagination:
  data: stranicehr
  size: 1
  alias: stranica
permalink: /hr/{{ stranica.slug }}/index.html
eleventyComputed:
    lang: "{{ stranica.lang }}"
    p_title: "{{ stranica.naslov }}"
    p_description: "{{ stranica.naslov }}"
    p_type: "static"
---
{% if stranica.banner %}
    <div class="nav-backed-header parallax" style="background-image:url({{ stranica.banner.handle }});">
{% else %}
    <div class="nav-backed-header parallax" style="background-image:url(/images/banner.jpg);">
{% endif %}
    <div class="container">
        <div class="row">
        <div class="col-md-12">
            <ol class="breadcrumb">
            <li><a href="/hr">Poƒçetna</a></li>
            <li class="active">{{ stranica.naslov }}</li>
            </ol>
        </div>
        </div>
    </div>
</div>
<!-- Start Page Header -->
<div class="page-header">
<div class="container">
    <div class="row">
    <div class="col-md-12">
        <h1 style="font-size:30px!important;">{{ stranica.naslov }}</h1>
    </div>
    </div>
</div>
</div>
<!-- End Page Header --> 
<!-- Start Content -->
<div class="main" role="main">
<div id="content" class="content full">
    <div class="container">
    <div class="row">
        <div class="col-md-12">
            {% if stranica.inlineslika.url %}
            <div class="col-lg-3 col-md-3 col-sm-3">
                <img src="{{ stranica.inlineslika.url }}" width="90%" alt="" style="padding-bottom:20px;">
            </div>
            {% endif %}
            <div class="single-post-content-wrapper p-3">
                {{ stranica.sadrzaj | safe }}
            </div>
        </div>
    </div>
    </div>
</div>
</div>