---
layout: default
pagination:
  data: stranicehr
  size: 1
  alias: stranica
  addAllPagesToCollections: true
permalink: /hr/{{ stranica.slug }}/index.html
eleventyComputed:
    lang: "{{ stranica.lang }}"
    p_title: "{{ stranica.naslov }}"
    p_description: "{{ stranica.naslov }}"
    p_id: "{{ stranica.navigacija }}"
---
{% if stranica.banner %}
    <div class="nav-backed-header parallax stranica-banner" style="background-image:url(https://media.graphcms.com/output=format:webp/{{ stranica.banner.handle }});">
{% elseif stranica.boja %}
    <div class="nav-backed-header parallax stranica-banner" style="background-color:{{ stranica.boja }};">
{% else %}
    <div class="nav-backed-header parallax stranica-banner" style="background-image:url(/images/banner.jpg);">
{% endif %}
    <div class="container">
        <div class="row">
        <div class="col-md-12">
            <ol class="breadcrumb stranica-breadcrumb">
            <li><a href="/hr">Poƒçetna</a></li>
            <li class="active">{{ stranica.naslov }}</li>
            </ol>
        </div>
        </div>
    </div>
</div>
<!-- Start Page Header -->
<div class="page-header">
<div class="container">
    <div class="row">
    <div class="col-md-12">
        <h1 style="font-size:30px!important;">{{ stranica.naslov }}</h1>
    </div>
    </div>
</div>
</div>
<!-- End Page Header --> 
<!-- Start Content -->
<div class="main" role="main">
<div id="content" class="content full">
    <div class="container">
        <div class="row">
            <div class="col-md-9">
                {% if stranica.inlineslika.url %}
                <div class="col-lg-6 col-md-6 col-sm-6 inline-slika" style="padding: 0 0 20px;">
                    <img src="{{ stranica.inlineslika.url }}" width="90%" alt="">
                </div>
                {% endif %}
                <div class="single-post-content-wrapper p-3">
                    {{ stranica.sadrzaj | safe }}
                </div>

                {% include "partials/najave-aktivnosti.njk" %}

            </div>

            {% include "partials/sidebar-page-hr.njk" %}

        </div>
    </div>
</div>
</div>