<!-- Start Site Header -->
<header class="site-header">
  <div class="topbar">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-md-6 col-sm-6 col-xs-8">
          <h1 class="logo"> <a href="/en"><img src="/images/logo.jpg" alt="Logo"></a> </h1>
        </div>
        <div class="col-md-6 col-sm-6 col-xs-4">
          <ul class="top-navigation">
            <li><a href="/hr">HR</a></li>
            <li><a href="/en" style="color: #0CC9E8;">EN</a></li>
          </ul>
          <a href="#" class="visible-sm visible-xs menu-toggle"><i class="fa fa-bars"></i></a> </div>
      </div>
    </div>
  </div>
  <div class="main-menu-wrapper">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <nav class="navigation">
             <ul class="sf-menu">
              <li>
                <a href="/en">Home</a>
              </li>
              <li><a href="#" class="sf-with-ul">About us</a>
                <ul class="dropdown" style="display: none; left: -40px;">
                  <li><a href="#" class="sf-with-ul">Institutions</a>
                    <ul class="dropdown" style="display: none; left: -40px;">
                      {% for nav in straniceen %}
                        {% if nav.navigacija === "ONamaUstanove" %}
                          <li><a href="/en/{{ nav.slug }}">{{ nav.naslov }}</a></li>
                        {% endif %}
                      {% endfor%}
                    </ul>
                  </li>
                  <li><a href="#" class="sf-with-ul">Associations founded or co-founded by ŽOZ</a>
                    <ul class="dropdown" style="display: none; left: -40px;">
                      {% for nav in straniceen %}
                        {% if nav.navigacija === "ONamaUdruge" %}
                          <li><a href="/en/{{ nav.slug }}">{{ nav.naslov }}</a></li>
                        {% endif %}
                      {% endfor%}
                    </ul>
                  </li>
                  <li><a href="#" class="sf-with-ul">Partner associations</a>
                    <ul class="dropdown" style="display: none; left: -40px;">
                      {% for nav in straniceen %}
                        {% if nav.navigacija === "ONamaPartneri" %}
                          <li><a href="/en/{{ nav.slug }}">{{ nav.naslov }}</a></li>
                        {% endif %}
                      {% endfor%}
                    </ul>
                  </li>
                </ul>
              </li>
              <li><a href="#" class="sf-with-ul">Current events</a>
                <ul class="dropdown" style="display: none; left: -40px;">
                  <li><a href="/en/news">News</a></li>
                  <li><a href="/en/events">Events</a></li>
                  <li><a href="/en/opinions">Opinions</a></li>
                </ul>
              </li>
              <li><a href="#" class="sf-with-ul">Judaism</a>
                <ul class="dropdown" style="display: none; left: -40px;">
                  {% for nav in straniceen %}
                    {% if nav.navigacija === "zidovstvo" %}
                      <li><a href="/en/{{ nav.slug }}">{{ nav.naslov }}</a></li>
                    {% endif %}
                  {% endfor%}
                  <li><a href="#" class="sf-with-ul">Heritage</a>
                    <ul class="dropdown" style="display: none; left: -40px;">
                      <li><a href="/en/culture">Culture</a></li>
                      <li><a href="/en/tradition">Tradition</a></li>
                      <li><a href="/en/songs-and-dance">Songs & dance</a></li>
                      <li><a href="/en/cuisine">Cuisine</a></li>
                    </ul>
                  </li>
                </ul>
              </li>
              <li><a href="#" class="sf-with-ul">Activities</a>
                <ul class="dropdown" style="display: none; left: -40px;">
                  {% for nav in straniceen %}
                    {% if nav.navigacija === "aktivnosti" %}
                      <li><a href="/en/{{ nav.slug }}">{{ nav.naslov }}</a></li>
                    {% endif %}
                  {% endfor%}
                </ul>
              </li>
              {% for nav in straniceen %}
                {% if (nav.navigacija === "kontakti") and (nav.red === 1) %}
                  <li><a href="/en/{{ nav.slug }}">{{ nav.naslov }}</a></li>
                {% endif %}
              {% endfor %}
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </div>
</header>
