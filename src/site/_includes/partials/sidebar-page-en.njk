 <!-- Start Sidebar -->
<div class="col-md-3 sidebar">

    {% include 'partials/search.njk' %}

    {% if p_id === "najava" %}

        <div class="widget sidebar-widget">
            <div class="sidebar-widget-title">
                <h3>Latest news</h3>
            </div>
            <ul>
                {% for item in novostien %}
                    <span class="meta-data" style="margin: 5px 0 0 0"><i class="fa fa-calendar"></i> {{ item.datum | dateEn }}</span>
                    <li><a href="/en/news/{{ item.slug }}">{{ item.naslov }}</a></li>    
                {% endfor %}
            </ul>
        </div>
        <div class="widget sidebar-widget">
            <div class="sidebar-widget-title">
                <h3>Latest opinions</h3>
            </div>
            <ul>
                {% for item in osvrtien %}
                    <span class="meta-data" style="margin: 5px 0 0 0"><i class="fa fa-calendar"></i> {{ item.datum | dateEn }}</span>
                    <li><a href="/en/opinions/{{ item.slug }}">{{ item.naslov }}</a></li>    
                {% endfor %}
            </ul>
        </div>

    {% elseif p_id === "novost" %}

        <div class="widget sidebar-widget">
            <div class="sidebar-widget-title">
                <h3>Upcoming events</h3>
            </div>
            <ul>
                {% for item in dogadjanjaen %}

                {% if item.naziv != "prazno" %}

                    <span class="meta-data" style="margin: 5px 0 0 0"><i class="fa fa-calendar"></i> {{ item.datum | dateEn }}</span>
                    <li><a href="/en/events/{{ item.slug }}">{{ item.naziv }}</a></li>    

                {% else %}

                <p><em>Currently we don't have any upcoming events</em></p>

                {% endif %}
                {% endfor %}
            </ul>
        </div>
        <div class="widget sidebar-widget">
            <div class="sidebar-widget-title">
                <h3>Latest opinions</h3>
            </div>
            <ul>
                {% for item in osvrtien %}
                    <span class="meta-data" style="margin: 5px 0 0 0"><i class="fa fa-calendar"></i> {{ item.datum | dateEn }}</span>
                    <li><a href="/en/opinions/{{ item.slug }}">{{ item.naslov }}</a></li>    
                {% endfor %}
            </ul>
        </div>

    {% elseif (p_id === "osvrt") or (p_id === "publikacija") %}
        
        <div class="widget sidebar-widget">
            <div class="sidebar-widget-title">
                <h3>Upcoming events</h3>
            </div>
            <ul>
                {% for item in dogadjanjaen %}

                {% if item.naziv != "prazno" %}

                    <span class="meta-data" style="margin: 5px 0 0 0"><i class="fa fa-calendar"></i> {{ item.datum | dateEn }}</span>
                    <li><a href="/en/events/{{ item.slug }}">{{ item.naziv }}</a></li>    

                {% else %}

                <p><em>Currently we don't have any upcoming events</em></p>

                {% endif %}
                {% endfor %}
            </ul>
        </div>
        <div class="widget sidebar-widget">
            <div class="sidebar-widget-title">
                <h3>Latest news</h3>
            </div>
            <ul>
                {% for item in novostien %}
                    <span class="meta-data" style="margin: 5px 0 0 0"><i class="fa fa-calendar"></i> {{ item.datum | dateEn }}</span>
                    <li><a href="/en/news/{{ item.slug }}">{{ item.naslov }}</a></li>    
                {% endfor %}
            </ul>
        </div>

    {% endif %}

</div>