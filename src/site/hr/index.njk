---
layout: default
p_title: Početna stranica
p_description: Početna stranica
---
<!-- Start Hero Slider -->
<div class="hero-slider flexslider clearfix" data-autoplay="no" data-pagination="no" data-arrows="no" data-style="fade" data-pause="yes">
  <ul class="slides">
    <li class=" parallax" style="background-image:url(/images/banner.jpg);"></li>
  </ul>
</div>
<!-- End Hero Slider -->
<!-- Start Notice Bar -->
<div class="notice-bar">
  <div class="container">
    <div class="row">
        <div class="col-md-6">
          {% for nav in stranicehr %}
            {% if (nav.navigacija === "sigurnost") and (nav.red === 1) %}
              <a href="/hr/{{ nav.slug }}" class="btn btn-warning" type="button" style="margin-left:auto;margin-right:auto;display:block;width: 250px;">{{ nav.naslov }}</a>
            {% endif %}
          {% endfor %}
        </div>
        <div class="col-md-6">
          {% for nav in stranicehr %}
            {% if (nav.navigacija === "sigurnost") and (nav.red === 2) %}
              <a href="/hr/{{ nav.slug }}" class="btn btn-info" type="button" style="margin-left:auto;margin-right:auto;display:block;width: 250px;">{{ nav.naslov }}</a>
            {% endif %}
          {% endfor %}
        </div>
    </div>
  </div>
</div>
<!-- End Notice Bar --> 
<!-- Start Content -->
<div class="main" role="main">
  <div id="content" class="content full">
    <div class="container">
      <div class="row">
        <div class="col-md-8">
          <!-- Latest News -->
          <div class="listing post-listing">
            <header class="listing-header">
              <h3>Najnovije vijesti</h3>
            </header>
            <section class="listing-cont">
              <ul>

                {% for item in novostihr | limit(5) %}

                <li class="item post">
                  <div class="row">
                    <div class="col-md-4"><a href="/hr/novosti/{{ item.slug }}" class="media-box"> <img src="https://media.graphcms.com/resize=fit:clip,width:218,height:145/output=format:webp/{{ item.foto.handle }}" alt="" class="img-thumbnail"> </a></div>
                    <div class="col-md-8">
                      <div class="post-title">
                        <h2><a href="/hr/novosti/{{ item.slug }}">{{ item.naslov }}</a></h2>
                        <span class="meta-data" style="font-size: 1em;"><i class="fa fa-calendar"></i> {{item.datum | dateHr }}</span></div>
                      <p>{{ item.isjecak }}</p>
                    </div>
                  </div>
                </li>
                  
                {% endfor %}

              </ul>
            </section>
          </div>
          <div class="spacer-30"></div>
        </div>
        <!-- Start Sidebar -->
        <div class="col-md-4 sidebar">

          {% include 'partials/search.njk' %}
        
          <div class="widget sidebar-widget">
            <div class="sidebar-widget-title">
              <h3>Najave događanja</h3>
            </div>
            <ul>

            {% if dogadjanjahr|length %}

            {% for item in dogadjanjahr | limit(5) %}

              <li class="item event-item clearfix">
                <div class="event-date"> <span class="date">{{item.datum | dateHr('dd') }}</span> <span class="month">{{item.datum | dateHr('LLL') }}</span> </div>
                <div class="event-detail">
                  <h4><a href="/hr/najave/{{ item.slug }}" style="color: #0CC9E8;">{{ item.naziv }}</a></h4>
                  <span class="event-dayntime meta-data">{{item.datum | dateHr('cccc') }}
                  
                  {%if (item.datum | dateHr('HH:mm')) != "00:00" %}
                    | {{item.datum | dateHr('HH:mm') }}h 
                  {% endif %}  
                  
                  </span> </div>
              </li>
              
            {% endfor %}

            {% else %}

              <p>Na žalost trenutno nemamo najavljenih događanja</p>

            {% endif %}

            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>