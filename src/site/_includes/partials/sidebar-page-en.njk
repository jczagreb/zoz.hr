                {% for item in novostien %}
                    <span class="meta-data" style="margin: 5px 0 0 0;color:#0CC9E8;"><i class="fa fa-calendar"></i> {{ item.datum | dateEn }}</span>
                    <li><a href="/en/news/{{ item.slug }}"><strong>{{ item.naslov }}</strong></a></li>    
