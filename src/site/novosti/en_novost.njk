---
layout: default
lang: en
pagination:
  data: novostien
  size: 1
  alias: novost
  addAllPagesToCollections: true
permalink: /en/news/{{ novost.slug }}/index.html
eleventyComputed:
  p_title: "{{ novost.naslov }}"
  p_description: "{{ novost.isjecak }}"
  p_type: "novost"
  p_image: "https://media.graphcms.com/resize=width:1200/{{ novost.foto.handle }}}"
  p_textcount: "{{ novost.sadrzajtekst | wordCount }}"
  p_tekst: "{{ novost.sadrzajtekst }}"
  p_datum: "{{ novost.datum }}"
  p_id: "novost"
---
<div class="nav-backed-header parallax" style="background-image:url(/images/banner.jpg);">
    <div class="container">
        <div class="row">
        <div class="col-md-12">
            <ol class="breadcrumb">
            <li><a href="/en">Home</a></li>
            <li><a href="/en/news">News</a></li>
            <li class="active">{{ novost.naslov }}</li>
            </ol>
        </div>
        </div>
    </div>
</div>
<!-- Start Page Header -->
<div class="page-header">
<div class="container">
    <div class="row">
        <div class="col-md-10 col-sm-10 col-xs-8">
            <h1 style="font-size:30px!important;">News from Židovska općine Zagreb</h1>
        </div>
        <div class="col-md-2 col-sm-2 col-xs-4"> <a href="/en/news" class="pull-right btn btn-primary">All news</a> </div>
    </div>
</div>
</div>
<!-- End Page Header --> 
<!-- Start Content -->
<div class="main" role="main">
    <div id="content" class="content full">
        <div class="container">
        <div class="row">
            <div class="col-md-9">
                <header class="single-post-header clearfix">
                <h2 class="post-title">{{ novost.naslov }}</h2>
                </header>
                <article class="post-content">
                    <div class="featured-image">
                    {% if item.foto %}
                        <img src="https://media.graphcms.com/resize=fit:clip,width:1200,height:635/output=format:webp/{{ item.foto.handle }}" alt="" class="img-thumbnail"></a>
                    {% else %}
                        <img src="/images/novosti.jpg" alt="" class="img-thumbnail"></a>
                    {% endif %}
                    </div>
                    <span class="post-meta meta-data"><span style="font-size:1.2em;"><i class="fa fa-calendar"></i> Published {{ novost.datum | dateEn('dd. LLLL yyyy.') }}</span></span>
                    <br/>
                    
                    {{ novost.sadrzaj | safe }}
                    
                </article>

                {% if osvrt.fotogalerija | length %}

                <div style="width:570px;margin:50px auto 0 auto;">
                    <a data-src="{{ osvrt.fotogalerija[0].url }}" data-fancybox="osvrt">
                        <figure class="caption">
                            <img src="https://media.graphcms.com/resize=fit:crop,width:600,height:200/output=format:webp/{{ osvrt.fotogalerija[0].url }}" class="img-fluid">
                            <figcaption class="caption-text">Open the photo gallery</figcaption>
                        </figure>
                    </a>
                </div>
                {% for foto in osvrt.fotogalerija %}

                {% if loop.index > 1 %}

                <a data-src="{{ foto.url }}" data-fancybox="osvrt"></a>

                {% endif %}

                {% endfor %}

                {% endif %}

            </div>

            {% include "partials/sidebar-page-en.njk" %}

        </div>
    </div>
</div>