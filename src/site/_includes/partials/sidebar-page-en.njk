 <!-- Start Sidebar -->
<div class="col-md-3 sidebar">
    <div class="widget sidebar-widget">
        <div class="sidebar-widget-title">
            <h3>Latest news</h3>
        </div>
        <ul>
            {% for item in novostien %}
                <span class="meta-data" style="margin: 5px 0 0 0"><i class="fa fa-calendar"></i> {{ item.datum | dateEn('dd. LLLL yyyy.') }}</span>
                <li><a href="/en/news/{{ item.slug }}">{{ item.naslov }}</a></li>    
            {% endfor %}
        </ul>
    </div>
    <div class="widget sidebar-widget">
        <div class="sidebar-widget-title">
            <h3>Upcoming events</h3>
        </div>
        <ul>
            <li><a href="#">Faith</a> (10)</li>
            <li><a href="#">Missions</a> (12)</li>
            <li><a href="#">Salvation</a> (34)</li>
            <li><a href="#">Worship</a> (14)</li>
        </ul>
    </div>
</div>