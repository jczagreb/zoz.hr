{% if lang === "hr" %}
    
<div class="widget sidebar-widget">
    <div class="sidebar-widget-title">
        <h3>Zadnji osvrti</h3>
    </div>
    <ul>
        {% for item in osvrtihr %}

        {% if item.naslov != "prazno" %}

            <span class="meta-data" style="margin: 5px 0 0 0;color:#0CC9E8;"><i class="fa fa-calendar"></i> {{ item.datum | dateHr }}</span>
            <li><a href="/hr/osvrti/{{ item.slug }}">{{ item.naslov }}</a></li>    
        
        {% else %}

        <p><em>Trenutno nemamo objavljenih osvrta</em></p>
        
        {% endif %}
        {% endfor %}
    </ul>
</div>

{% else %}

<div class="widget sidebar-widget">
    <div class="sidebar-widget-title">
        <h3>Latest opinions</h3>
    </div>
    <ul>
        {% for item in osvrtien %}

        {% if item.naslov != "prazno" %}

            <span class="meta-data" style="margin: 5px 0 0 0;color:#0CC9E8;"><i class="fa fa-calendar"></i> {{ item.datum | dateHr }}</span>
            <li><a href="/hr/osvrti/{{ item.slug }}">{{ item.naslov }}</a></li>    
        
        {% else %}

        <p><em>Currently we don't have any opinions in English</em></p>
        
        {% endif %}
        {% endfor %}
    </ul>
</div>

{% endif %}