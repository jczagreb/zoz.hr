        {% include "partials/sidebar-dogadjaji.njk" %}
        {% include "partials/sidebar-osvrti.njk" %}
    {% elseif (p_id === "osvrt") %}
        {% include "partials/sidebar-dogadjaji.njk" %}
        {% include "partials/sidebar-novosti.njk" %}
